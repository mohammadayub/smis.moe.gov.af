@page "{handler?}"
@model Clean.UI.Pages.Settings.Country.CountryModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer
@{
    ViewData["Title"] = "Country";
}

@Html.AntiForgeryToken()
    <div class="panel panel-flat" >
        <div class="panel-heading">
            <h1 class="panel-title">@_localizer["ثبت کشورها"]</h1>
        </div>
        <div class="panel-body">
            <form id="dv_Settings_Country_Country" class="form main-form page-component" type="form" prefix="or">
                <fieldset class="content-group">
                    <legend class="text-bold">@_localizer["ثبت و ویرایش کشورها"]</legend>
                    <div class="col-md-12 ">
                        <div class="row">
                            <div class="col-md-4 ">
                                <div class="form-group has-feedback has-feedback-left">
                                    <label class="text-bold">
                                        @_localizer["کود"]
                                        <span class="text-danger">&nbsp;*</span>
                                    </label>
                                    <input type="text" id="orcode" name="orCode" class="form-control search" required />
                                </div>
                            </div>
                            <div class="col-md-4 ">
                                <div class="form-group">
                                    <label class="text-bold">
                                        @_localizer["نام کشور"]
                                        <span class="text-danger">&nbsp;*</span>
                                    </label>
                                    <input type="text" id="ortitlelocal" name="orTitleLocal" class="form-control" required />
                                </div>
                            </div>
                            <div class="col-md-4 ">
                                <div class="form-group">
                                    <label class="text-bold">
                                        @_localizer["نام کشور (انگلیسی)"]
                                        <span class="text-danger">&nbsp;*</span>
                                    </label>
                                    <input type="text" id="ortitle" name="orTitle" class="form-control" required />
                                </div>
                            </div>
                        </div>
                    </div>
                </fieldset>
                <hr />
                <div class="row div-form-control main-form-details">
                    <div class="col-md-12">
                        <div class="form-group actions">
                            <button type="button" class="btn btn-primary" action="save"><i class="icon-floppy-disk position-left"></i>ثبت معلومات</button>
                            <button type="button" class="btn btn-primary" action="search"><i class="icon-search4 position-left"></i>جستجو </button>
                            <button type="button" class="btn btn-primary" action="new"><i class="icon-new-tab position-left"></i>صفحه جدید </button>
                        </div>
                    </div>
                </div>
                <div class="form-grid main-form-details" style="">
                    <table  bindonclick="true">
                        <thead>
                            <tr>
                                <th colname="code">@_localizer["کود"]</th>
                                <th colname="titlelocal">@_localizer["نام"]</th>
                                <th colname="title">@_localizer["نام"]</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </form>
        </div>


     </div>